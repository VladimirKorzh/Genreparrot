<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background_a2">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/scrollView"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/myBox">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="0dp"
                android:padding="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                        android:id="@+id/textView"
                        android:textStyle="italic"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Monday"
                        android:id="@+id/textView2"
                        style="@style/myCalendarBoxHeader"
                        android:background="@drawable/abc_ab_stacked_transparent_light_holo"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Tuesday"
                        android:id="@+id/textView3"
                        style="@style/myCalendarBoxHeader"
                        android:background="@drawable/abc_ab_stacked_transparent_light_holo"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Wednesday"
                        android:id="@+id/textView8"
                        style="@style/myCalendarBoxHeader"
                        android:background="@drawable/abc_ab_stacked_transparent_light_holo"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Thursday"
                        android:id="@+id/textView7"
                        style="@style/myCalendarBoxHeader"
                        android:background="@drawable/abc_ab_stacked_transparent_light_holo"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Friday"
                        android:id="@+id/textView6"
                        style="@style/myCalendarBoxHeader"
                        android:background="@drawable/abc_ab_stacked_transparent_light_holo"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Saturday"
                        android:id="@+id/textView5"
                        style="@style/myCalendarBoxHeader"
                        android:background="@drawable/abc_ab_stacked_transparent_light_holo"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Sunday"
                        android:id="@+id/textView4"
                        style="@style/myCalendarBoxHeader"
                        android:background="@drawable/abc_ab_stacked_transparent_light_holo"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout13">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                        android:text="3"
                        android:id="@+id/textView9"
                        style="@style/myCalendarBoxHeader"
                        android:textStyle="italic"
                        android:background="@drawable/abc_ab_stacked_transparent_light_holo" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/myCalendarBox"></FrameLayout>

                    <FrameLayout
                        style="@style/myCalendarBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/frameLayout6" />

                    <FrameLayout
                        style="@style/myCalendarBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/frameLayout5" />

                    <FrameLayout
                        style="@style/myCalendarBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/frameLayout4" />

                    <FrameLayout
                        style="@style/myCalendarBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/frameLayout3" />

                    <FrameLayout
                        style="@style/myCalendarBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/frameLayout2" />

                    <FrameLayout
                        style="@style/myCalendarBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/frameLayout" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout10">

                    <TextView
                        style="@style/myCalendarBoxHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/textView28"
                        android:layout_weight="1"
                        android:textStyle="italic" />

                    <TextView
                        style="@style/myCalendarBoxHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/textView29"
                        android:layout_weight="1" />

                    <TextView
                        style="@style/myCalendarBoxHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/textView30"
                        android:layout_weight="1" />

                    <TextView
                        style="@style/myCalendarBoxHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/textView31"
                        android:layout_weight="1" />

                    <TextView
                        style="@style/myCalendarBoxHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/textView32"
                        android:layout_weight="1" />

                    <TextView
                        style="@style/myCalendarBoxHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/textView33"
                        android:layout_weight="1" />

                    <TextView
                        style="@style/myCalendarBoxHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/textView34"
                        android:layout_weight="1" />

                    <TextView
                        style="@style/myCalendarBoxHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/textView35"
                        android:layout_weight="1" />

                    <TextView
                        style="@style/myCalendarBoxHeader"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:id="@+id/textView36"
                        android:layout_weight="1" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <Button
            style="@style/myButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnStartExecution"
            android:id="@+id/btnStartTraining"
            android:onClick="btnStartTrainingClick"
            android:clickable="true" />

        <Button
            style="@style/myButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnCancelExecution"
            android:id="@+id/btnCancelAllSchedules"
            android:onClick="btnCancelAllSchedulesClick"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>