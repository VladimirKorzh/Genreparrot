<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="myBox" parent="android:Widget">
        <item name="android:background">@drawable/box_style</item>
    </style>

    <style name="myButton" parent="android:Widget">
        <item name="android:background">@drawable/button_style</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="myCalendarBox" parent="android:Widget">
        <item name="android:minHeight">@dimen/calendarBoxHeight</item>
        <item name="android:minWidth">@dimen/calendarBoxWidth</item>
        <item name="android:background">@drawable/calendar_box</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="myCalendarBoxHeader" parent="android:Widget">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:minHeight">@dimen/calendarBoxHeight</item>
        <item name="android:minWidth">@dimen/calendarBoxWidth</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="myBottomBar" parent="android:Widget">
        <item name="android:minHeight">80dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/abc_ab_solid_light_holo</item>
    </style>

</resources>
